{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-write mod.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-run mod.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-sys --allow-net",
    "test:watch": "deno test --watch --allow-read --allow-write --allow-env --allow-sys --allow-net",
    "test:coverage": "deno test --coverage --allow-read --allow-write --allow-env --allow-sys --allow-net",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check **/*.ts",
    "bundle": "deno run --allow-read --allow-write scripts/bundle-assets.ts",
    "build": "deno task bundle && deno compile --allow-net --allow-read --allow-write --allow-run --output=quickpost mod.ts",
    "compile": "deno compile --allow-net --allow-read --allow-write --allow-run --output=quickpost mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100
  }
}
